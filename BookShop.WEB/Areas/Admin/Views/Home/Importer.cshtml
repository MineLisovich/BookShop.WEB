@model BookShop.WEB.Models.ImporterViewModel

<div class="page-heading contact-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-content">
                    <h4>Таблица</h4>
                    <h2>Издатели</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="products">
    <div class="container">
        <div class="AddNewItem">
            <a asp-area="admin" asp-controller="Importers" asp-action="AEImporter">Добавить нового импортёра</a>
        </div>
        <div class="serchDiv">
            <form>
                <input name="serch" class="serchInput" type="text" placeholder="Поиск" />
            </form>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <td><b>ID:</b></td>
                    <td><b>Полное наименование:</b></td>
                    <td><b>Адресс:</b></td>
                    <td><b>Управление</b></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Importers.Count() > 0)
                {
                    @foreach (var item in Model.Importers)
                    {
                        <tr class="tableDev">
                            <td>@item.Id</td>
                            <td>@item.FullNameImporter</td>
                            <td>@item.AddressImpoter</td>
                            <td>
                                <a asp-area="admin" asp-controller="Importers" asp-action="AEImporter" asp-route-id="@item.Id">Изменить</a>
                                <a asp-area="admin" asp-controller="Importers" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
