@model BookShop.WEB.Models.UserViewModel

<div class="page-heading contact-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-content">
                    <h4>Таблица</h4>
                    <h2>Пользователи</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="products">
    <div class="container">
        <div class="AddNewItem">
            <a asp-area="admin" asp-controller="Users" asp-action="Add">Добавить нового пользователя</a>
        </div>
        <div class="serchDiv">
            <form>
                <input name="serch" class="serchInput" type="text" placeholder="Поиск" />
            </form>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <td><b>ID:</b></td>
                    <td><b>Логин:</b></td>
                    <td><b>Email:</b></td>

                    <td><b>Управление</b></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.user.Count() > 0)
                {
                    @foreach (var item in Model.user)
                    {
                        <form asp-area="admin" asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id" method="post">
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>

                            <td>
                                <a asp-area="admin" asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                                <button type="submit">Удалить</button>

                            </td>
                        </tr>
                        </form>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
