@model BookShop.WEB.Models.FormatViewModel

<div class="page-heading contact-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-content">
                    <h4>Таблица</h4>
                    <h2>Формат книги</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="products">
    <div class="container">
        <div class="AddNewItem">
            <a asp-area="admin" asp-controller="Formats" asp-action="AEFormat">Добавить новый формат</a>
        </div>
        <div class="serchDiv">
            <form>
                <input name="serch" class="serchInput" type="text" placeholder="Поиск" />
            </form>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <td><b>ID:</b></td>
                    <td><b>Наименование:</b></td>
                    <td><b>Управление</b></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Formats.Count() > 0)
                {
                    @foreach (var item in Model.Formats)
                    {
                        <tr class="tableDev">
                            <td>@item.Id</td>
                            <td>@item.NameFormat</td>
                            <td>
                                <a asp-area="admin" asp-controller="Formats" asp-action="AEFormat" asp-route-id="@item.Id">Изменить</a>
                                <a asp-area="admin" asp-controller="Formats" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
