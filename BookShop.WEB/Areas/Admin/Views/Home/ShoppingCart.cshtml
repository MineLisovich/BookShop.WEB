@model BookShop.WEB.Models.ShoppingCartViewModel

<div class="page-heading contact-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-content">
                    <h4>Таблица</h4>
                    <h2>Корзина пользователей</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="products">
    <div class="container">
        <div class="serchDiv">
            <form>
                <input name="serch" class="serchInput" type="text" placeholder="Поиск" />
            </form>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <td><b>ID:</b></td>
                    <td><b>Пользователь:</b></td>
                    <td><b>Наименование книги:</b></td>
                    <td><b>Цена:</b></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.ShoppingCart.Count() > 0)
                {
                    @foreach (var item in Model.ShoppingCart)
                    {
                        <tr class="tableDev">
                            <td>@item.Id</td>
                            <td>@item.User.UserName</td>
                            <td>@item.Books.NameBook</td>
                            <td>@item.TotalPrice</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
