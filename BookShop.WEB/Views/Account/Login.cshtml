@model LoginViewModel
<!-- Header -->
<header class="">
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h2>BOOK <em>SHOP</em></h2></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            Главная
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Products">Каталог</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contacts">Контакты</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Вход</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="page-heading contact-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-content">
                    <h4>Авторизация</h4>
                    <h2>Войдите в свой аккаунт</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- login form -->
<div class="container">
    <div class="LoginForm">
        <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
            <input asp-for="UserName" type="text" placeholder="Логин" />
            <span style="color:red" asp-validation-for="UserName"></span>
            <input asp-for="Password" type="password" placeholder="Пароль" />
            <span style="color:red" asp-validation-for="Password"></span><br>
            <button type="submit" id="form-submit" class="filled-button">Вход</button>
        </form>
        <p>Нет ещё аккаунта? <a asp-area="" asp-controller="Account" asp-action="Registration">Так создайте его!</a></p>
        <br>
        <p>Забыли пароль? <a asp-area="" asp-controller="Account" asp-action="ForgotPassword">Восстановить его можно тут</a></p>
    </div>
</div>
<!--login form -->