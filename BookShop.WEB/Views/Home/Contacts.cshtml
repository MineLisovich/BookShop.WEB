@model FeedbackViewModel 
<!-- Header -->
<header class="">
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h2>BOOK <em>SHOP</em></h2></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            Главная
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Products">Каталог</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contacts">Контакты</a>
                    </li>
                    @if (Model.IdentityUser == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Вход</a>
                        </li>
                    }
                    @if (Model.IdentityUser != null)
                    {
                        @foreach (var obj in Model.UserRoles)
                        {
                            @if (obj == "user")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="user" asp-controller="Home" asp-action="Index">@Model.IdentityUser.UserName</a>
                                </li>
                                <img src="~/images/avatarUser.png" width="50" height="50">
                                <li class="nav-item">

                                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>
                                </li>
                            }
                            @if (obj == "admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">@Model.IdentityUser.UserName</a>
                                </li>
                                <img src="~/images/avatarAdmin.png" width="50" height="50">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>
                                </li>
                            }

                        }
                    }

                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Page Content -->
    <div class="page-heading contact-heading header-text">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="text-content">
              <h4>Контакты</h4>
              <h2>Давайте свяжемся!</h2>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="find-us">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="section-heading">
              <h2>Наше местоположение на карте</h2>
            </div>
          </div>
          <div class="col-md-8">
<!-- How to change your own map point
	1. Go to Google Maps
	2. Click on your location point
	3. Click "Share" and choose "Embed map" tab
	4. Copy only URL and paste it within the src="" field below
-->
            <div id="map">
                    <iframe src="https://yandex.ru/map-widget/v1/?um=constructor%3Aa8692714916caf248765f908e7063594a40d719fd086c7e10ebafa056047f928&amp;source=constructor" width="100%" height="330" frameborder="0"></iframe>
            </div>
          </div>
          <div class="col-md-4">
            <div class="left-content">
              <h4>О нашем офисе</h4>
              <p>Головной офис ОАО «BookShop» расположен по адресу: Республика Беларусь, г. Минск, ул. Железнодорожная, 27А <br><br> Режим работы:<br>Понедельник-пятница: 8:30-17:30<br>Перерыв на обед: 13:00-13:30<br>Суббота-воскресенье: выходной</p>
              <ul class="social-icons">
                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                <li><a href="#"><i class="fa fa-vk"></i></a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    
    <div class="send-message">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="section-heading">
              <h2>Отправьте нам сообщение</h2>
            </div>
          </div>
          <div class="col-md-8">
            <div class="contact-form">
                    <form asp-area="" asp-controller="Home" asp-action="Contacts" id="contact" method="post">
                <div class="row">
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                      <input asp-for="Email" name="email" type="text" class="form-control" id="email" placeholder="Ваш E-Mail" required="">
                    </fieldset>
                  </div>
                
                  <div class="col-lg-12">
                    <fieldset>
                      <textarea asp-for="Message" name="message" rows="6" class="form-control" id="message" placeholder="Ваше Сообщение" required=""></textarea>
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <button type="submit" id="form-submit" class="filled-button">Отправить</button>
                    </fieldset>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
